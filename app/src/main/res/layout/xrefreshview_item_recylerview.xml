<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/commont_dp2"
        android:orientation="horizontal">

        <sp51.spotpass.com.spotpass.ui.utils.image.CircleImageView
            android:id="@+id/home_name_avatar"
            android:layout_width="@dimen/commont_dp40"
            android:layout_height="@dimen/commont_dp40"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/commont_dp10"
            android:src="@mipmap/ic_banner" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/home_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/commont_dp10"
                android:layout_marginTop="@dimen/commont_dp2"
                android:text="清风老师"
                android:textColor="@color/black"
                android:textSize="@dimen/commont_dp16" />

            <TextView
                android:id="@+id/home_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/commont_dp10"
                android:gravity="center"
                android:text="@string/app_name"
                android:textColor="@color/black_grey"
                android:textSize="@dimen/commont_dp12" />


        </LinearLayout>

        <Button
            android:id="@+id/home_expert_interpretation"
            android:layout_width="@dimen/commont_dp70"
            android:layout_height="@dimen/commont_dp25"
            android:layout_marginTop="@dimen/commont_dp2"
            android:layout_marginRight="@dimen/commont_dp10"
            android:background="@drawable/shape_c5_red"
            android:text="@string/textView_expert_interpretation"
            android:textColor="@color/white"
            android:textSize="@dimen/commont_dp12" />

    </LinearLayout>


    <TextView
        android:id="@+id/home_name_context"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/commont_dp10"
        android:lineSpacingMultiplier="1.5"
        android:text="lkajjlalkdlkjadnandnadalidadadlkalkdladlkadlkalkladlaldjlkadjlajdljaldjlajdlajdljaldjlajpajfkljgfreghgthjeuiwyhhjFAXJMJKASHDAKJBDAFHNGPJHKLSJCFASJBCASFNKAHDKSHYFSGKNMSKNHSGNBRKJ"
        android:textColor="@color/black1"
        android:textSize="@dimen/commont_dp16" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/commont_dp1"
        android:background="@color/color_light_grey" />

</LinearLayout>
