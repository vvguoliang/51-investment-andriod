<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/transaction_relative"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_light_grey"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/commont_dp10">

        <sp51.spotpass.com.spotpass.ui.utils.image.CircleImageView
            android:layout_width="@dimen/commont_dp30"
            android:layout_height="@dimen/commont_dp30"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/commont_dp10"
            android:src="@color/color_pink_red"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/transaction_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/commont_dp10"
                android:text="@string/app_name"
                android:textColor="@color/black"
                android:textSize="@dimen/commont_dp16" />

            <TextView
                android:id="@+id/transaction_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/commont_dp10"
                android:padding="@dimen/commont_dp5"
                android:text="@string/app_name"
                android:textColor="@color/black_grey"
                android:textSize="@dimen/commont_dp10" />

        </LinearLayout>

        <TextView
            android:id="@+id/transaction_text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="@dimen/commont_dp10"
            android:text="@string/app_name"
            android:textStyle="bold"
            android:textColor="@color/chart_green"
            android:textSize="@dimen/commont_dp16"
            />

        <TextView
            android:id="@+id/transaction_text2"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/commont_dp30"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:paddingLeft="@dimen/commont_dp20"
            android:paddingRight="@dimen/commont_dp20"
            android:paddingTop="@dimen/commont_dp5"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="@dimen/commont_dp16" />


    </RelativeLayout>

</RelativeLayout>
