<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_light_grey">

    <View
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@android:color/transparent" />

    <include layout="@layout/view_title_textview" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_relative">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/commont_dp100"
                android:alpha="0.8"
                android:background="@color/color_forest_green"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|right"
                    android:layout_marginRight="@dimen/commont_dp10"
                    android:layout_marginTop="@dimen/commont_dp10"
                    android:background="@drawable/shape_c200_while_green"
                    android:paddingBottom="@dimen/commont_dp2"
                    android:paddingLeft="@dimen/commont_dp10"
                    android:paddingRight="@dimen/commont_dp10"
                    android:paddingTop="@dimen/commont_dp2"
                    android:text="@string/app_name"
                    android:textColor="@color/white"
                    android:textSize="@dimen/commont_dp12" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="@dimen/commont_dp5"
                    android:text="@string/app_name"
                    android:textColor="@color/white"
                    android:textSize="@dimen/commont_dp20" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/app_name"
                    android:textColor="@color/white"
                    android:textSize="@dimen/commont_dp14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/commont_dp70"
                android:background="@color/color_light_green"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/commont_dp5"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="@dimen/commont_dp5"
                        android:text="@string/textView_holding_float_name"
                        android:textColor="@color/white"
                        android:textSize="@dimen/commont_dp14" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="@dimen/commont_dp5"
                        android:text="@string/app_name"
                        android:textColor="@color/white"
                        android:textSize="@dimen/commont_dp14" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/commont_dp5"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="@dimen/commont_dp5"
                        android:text="@string/textView_holding_float_umber"
                        android:textColor="@color/white"
                        android:textSize="@dimen/commont_dp14" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="@dimen/commont_dp5"
                        android:text="@string/app_name"
                        android:textColor="@color/white"
                        android:textSize="@dimen/commont_dp14" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/commont_dp5"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="@dimen/commont_dp5"
                        android:text="@string/textView_holding_float_uilding"
                        android:textColor="@color/white"
                        android:textSize="@dimen/commont_dp14" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="@dimen/commont_dp5"
                        android:text="@string/app_name"
                        android:textColor="@color/white"
                        android:textSize="@dimen/commont_dp14" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/commont_dp10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textColor="@color/black_grey"
                    android:textSize="@dimen/commont_dp16" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textColor="@color/black_grey"
                    android:textSize="@dimen/commont_dp16" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textColor="@color/black_grey"
                    android:textSize="@dimen/commont_dp16" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/commont_dp1"
                android:background="@color/black_grey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/commont_dp10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/app_name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/commont_dp16" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/commont_dp10"
                    android:layout_marginRight="@dimen/commont_dp10"
                    android:layout_weight="1"
                    android:text="@string/app_name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/commont_dp16" />

                <Button
                    android:id="@+id/single_position_button"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/commont_dp30"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/commont_dp10"
                    android:background="@drawable/shape_c5_red"
                    android:text="@string/app_name"
                    android:textColor="@color/white"
                    android:textSize="@dimen/commont_dp16" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/commont_dp5"
                android:background="@color/color_light_grey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/commont_dp10"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_name"
                        android:textColor="@color/color_pink_red"
                        android:textSize="@dimen/commont_dp16" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/commont_dp5"
                        android:layout_marginBottom="@dimen/commont_dp15"
                        android:layout_marginLeft="@dimen/commont_dp50"
                        android:layout_marginRight="@dimen/commont_dp50"
                        android:layout_marginTop="@dimen/commont_dp5"
                        android:src="@color/color_pink_red" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_name"
                        android:textColor="@color/black"
                        android:textSize="@dimen/commont_dp18" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_name"
                        android:textColor="@color/black"
                        android:textSize="@dimen/commont_dp14" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_name"
                        android:textColor="@color/black"
                        android:textSize="@dimen/commont_dp14" />


                </LinearLayout>

                <View
                    android:layout_width="@dimen/commont_dp1"
                    android:layout_height="match_parent"
                    android:background="@color/black_grey" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_name"
                        android:textColor="@color/color_light_green"
                        android:textSize="@dimen/commont_dp16" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/commont_dp5"
                        android:layout_marginBottom="@dimen/commont_dp15"
                        android:layout_marginLeft="@dimen/commont_dp50"
                        android:layout_marginRight="@dimen/commont_dp50"
                        android:layout_marginTop="@dimen/commont_dp5"
                        android:src="@color/color_light_green" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_name"
                        android:textColor="@color/black"
                        android:textSize="@dimen/commont_dp18" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_name"
                        android:textColor="@color/black"
                        android:textSize="@dimen/commont_dp14" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_name"
                        android:textColor="@color/black"
                        android:textSize="@dimen/commont_dp14" />


                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/commont_dp5"
                android:layout_marginBottom="@dimen/commont_dp10"
                android:layout_marginTop="@dimen/commont_dp10"
                android:background="@color/color_light_grey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/commont_dp10"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/holding_prompt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:text="@string/app_name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/commont_dp16" />

                <TextView
                    android:id="@+id/holding_prompt_context"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_marginTop="@dimen/commont_dp10"
                    android:lineSpacingMultiplier="1.1"
                    android:text="@string/textView_holding_prompt_context"
                    android:textColor="@color/black_grey"
                    android:textSize="@dimen/commont_dp16" />


            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</RelativeLayout>
