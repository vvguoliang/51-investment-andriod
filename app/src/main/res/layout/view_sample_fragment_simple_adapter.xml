<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/transaction_linear1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_light_grey"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/transaction_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/profit_list_liner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/commont_dp1"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="@dimen/commont_dp10">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/commont_dp10">

                <TextView
                    android:id="@+id/sample_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:text="@string/app_name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/commont_dp18" />

                <TextView
                    android:id="@+id/memo_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/commont_dp15"
                    android:layout_toRightOf="@id/sample_name"
                    android:background="@drawable/shape_c5_grle"
                    android:paddingLeft="@dimen/commont_dp10"
                    android:paddingRight="@dimen/commont_dp10"
                    android:text="@string/app_name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/commont_dp14"
                    android:visibility="gone" />


                <TextView
                    android:id="@+id/qryQuoter_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/sample_name"
                    android:layout_marginTop="@dimen/commont_dp20"
                    android:text="@string/textView_time"
                    android:textColor="@color/black_grey"
                    android:textSize="@dimen/commont_dp12"
                    android:visibility="gone" />


            </RelativeLayout>

            <TextView
                android:id="@+id/qey_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/commont_dp10"
                android:layout_weight="1"
                android:gravity="center|right"
                android:textColor="@color/color_pink_red"
                android:textSize="@dimen/commont_dp18"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/commont_dp10"
                android:layout_marginRight="@dimen/commont_dp10"
                android:src="@mipmap/ic_arrce_righ"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/commont_dp1"
            android:background="@color/white"
            android:orientation="horizontal"
            android:visibility="gone">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view_test_rv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/commont_dp150"
                android:background="@color/white"
                android:scrollbars="none" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/commont_dp5"
            android:visibility="gone">

            <TextView
                android:id="@+id/transaction_buy_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/commont_dp10"
                android:background="@drawable/shape_c5_red"
                android:paddingBottom="@dimen/commont_dp8"
                android:paddingLeft="@dimen/commont_dp25"
                android:paddingRight="@dimen/commont_dp25"
                android:paddingTop="@dimen/commont_dp8"
                android:text="@string/textView_buy_more"
                android:textColor="@color/white"
                android:textSize="@dimen/commont_dp14" />

            <TextView
                android:id="@+id/transaction_buy_and_fall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/commont_dp10"
                android:background="@drawable/shape_c5_green"
                android:paddingBottom="@dimen/commont_dp8"
                android:paddingLeft="@dimen/commont_dp25"
                android:paddingRight="@dimen/commont_dp25"
                android:paddingTop="@dimen/commont_dp8"
                android:text="@string/textView_buy_fall"
                android:textColor="@color/white"
                android:textSize="@dimen/commont_dp14" />

            <TextView
                android:id="@+id/transaction_buy_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/commont_dp10"
                android:background="@drawable/shape_corner_blue"
                android:paddingBottom="@dimen/commont_dp8"
                android:paddingLeft="@dimen/commont_dp25"
                android:paddingRight="@dimen/commont_dp25"
                android:paddingTop="@dimen/commont_dp8"
                android:text="@string/textView_buy_register"
                android:textColor="@color/black"
                android:textSize="@dimen/commont_dp14" />

        </LinearLayout>
    </LinearLayout>
    <!-- chiliang liebiao -->

    <RelativeLayout
        android:id="@+id/transaction_linear_no_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/commont_dp2"
                android:src="@drawable/dash_line" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/commont_dp10">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/single_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_name"
                        android:textColor="@color/color_pink_red"
                        android:textSize="@dimen/commont_dp16" />

                    <TextView
                        android:id="@+id/single_name_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/commont_dp5"
                        android:text="@string/app_name"
                        android:textColor="@color/black_grey"
                        android:textSize="@dimen/commont_dp16" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/single_hand_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/commont_dp15"
                        android:text="@string/app_name"
                        android:textColor="@color/black_grey"
                        android:textSize="@dimen/commont_dp16" />

                    <TextView
                        android:id="@+id/single_rate_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/commont_dp5"
                        android:text="@string/app_name"
                        android:textColor="@color/black_grey"
                        android:textSize="@dimen/commont_dp16"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/single_rate_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/commont_dp5"
                        android:src="@mipmap/voucher1"
                        android:visibility="gone" />

                </LinearLayout>

                <TextView
                    android:id="@+id/single_rate_text1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/app_name"
                    android:textColor="@color/black_grey"
                    android:textSize="@dimen/commont_dp16"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/single_position_button"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/commont_dp25"
                    android:layout_gravity="center"
                    android:background="@drawable/shape_c5_red"
                    android:text="@string/textView_holding_flat_out"
                    android:textColor="@color/white"
                    android:textSize="@dimen/commont_dp14" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="@dimen/commont_dp10"
                    android:src="@mipmap/ic_arrce_righ"
                    android:visibility="gone" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/commont_dp1"
                android:background="@color/color_light_grey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/single_target_profit_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/app_name"
                    android:textSize="@dimen/commont_dp14" />

                <TextView
                    android:id="@+id/single_stop_loss_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/app_name"
                    android:textSize="@dimen/commont_dp14" />

                <TextView
                    android:id="@+id/single_time_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/app_name"
                    android:textSize="@dimen/commont_dp14" />

            </LinearLayout>


        </LinearLayout>

        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/ic_no_data"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/image"
            android:padding="@dimen/commont_dp10"
            android:text="@string/textView_no_data"
            android:textColor="@color/black_grey"
            android:textSize="@dimen/commont_dp16"
            android:visibility="gone" />

    </RelativeLayout>

    <!--持倉歷史-->
    <RelativeLayout
        android:id="@+id/history_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/commont_dp1"
                android:background="@color/black_grey" />

            <TextView
                android:id="@+id/history_buy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_right_while_red"
                android:paddingLeft="@dimen/commont_dp5"
                android:paddingRight="@dimen/commont_dp5"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textSize="@dimen/commont_dp14" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/commont_dp10">

                <TextView
                    android:id="@+id/history_teime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/app_name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/commont_dp16" />

                <TextView
                    android:id="@+id/history_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/app_name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/commont_dp16" />

                <TextView
                    android:id="@+id/history_num"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/app_name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/commont_dp16" />

                <TextView
                    android:id="@+id/history_money"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/app_name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/commont_dp16" />

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/transaction_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/commont_dp5"
        android:layout_marginTop="@dimen/commont_dp5"
        android:background="@color/white"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/commont_dp10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/register_buy_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/shape_right_green_while"
                    android:paddingBottom="@dimen/commont_dp2"
                    android:paddingLeft="@dimen/commont_dp10"
                    android:paddingRight="@dimen/commont_dp10"
                    android:paddingTop="@dimen/commont_dp2"
                    android:text="@string/app_name"
                    android:textColor="@color/white"
                    android:textSize="@dimen/commont_dp14" />

                <TextView
                    android:id="@+id/register_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="@string/app_name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/commont_dp16" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/commont_dp1"
                android:layout_margin="@dimen/commont_dp10"
                android:background="@color/color_light_grey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/commont_dp10"
                    android:layout_marginRight="@dimen/commont_dp10"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="挂单价"
                        android:textColor="@color/black"
                        android:textSize="@dimen/commont_dp18" />

                    <TextView
                        android:id="@+id/register_name2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/commont_dp20"
                        android:text="@string/app_name"
                        android:textColor="@color/black"
                        android:textSize="@dimen/commont_dp14" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/register_linear1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/commont_dp10"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="成交价"
                        android:textColor="@color/black"
                        android:textSize="@dimen/commont_dp18" />

                    <TextView
                        android:id="@+id/orderprice_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/commont_dp25"
                        android:text="@string/app_name"
                        android:textColor="@color/black"
                        android:textSize="@dimen/commont_dp14" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/register_linear2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/commont_dp5"
                    android:layout_marginRight="@dimen/commont_dp10"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/profitpoints_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_name"
                        android:textColor="@color/black"
                        android:textSize="@dimen/commont_dp14" />

                    <TextView
                        android:id="@+id/losspoints_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/commont_dp25"
                        android:text="@string/app_name"
                        android:textColor="@color/black"
                        android:textSize="@dimen/commont_dp14" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/commont_dp15"
                android:layout_marginRight="@dimen/commont_dp10"
                android:layout_marginTop="@dimen/commont_dp5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/textView_purchase"
                    android:textColor="@color/black_grey"
                    android:textSize="@dimen/commont_dp14" />

                <TextView
                    android:id="@+id/register_buy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/commont_dp20"
                    android:text="@string/app_name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/commont_dp14" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/commont_dp15"
                    android:layout_marginTop="@dimen/commont_dp5"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/register_expected_cost1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/textView_expected_cost"
                        android:textColor="@color/black_grey"
                        android:textSize="@dimen/commont_dp14" />

                    <TextView
                        android:id="@+id/register_expected_cost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/commont_dp15"
                        android:text="@string/app_name"
                        android:textColor="@color/black"
                        android:textSize="@dimen/commont_dp14" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/register_linear3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="止盈止損"
                        android:textColor="@color/black_grey"
                        android:textSize="@dimen/commont_dp14" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/commont_dp20"
                        android:text="@string/app_name"
                        android:textColor="@color/black"
                        android:textSize="@dimen/commont_dp14" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/commont_dp15"
                android:layout_marginTop="@dimen/commont_dp5"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/textView_holding_time"
                        android:textColor="@color/black_grey"
                        android:textSize="@dimen/commont_dp14" />

                    <TextView
                        android:id="@+id/register_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/commont_dp15"
                        android:text="@string/app_name"
                        android:textColor="@color/black"
                        android:textSize="@dimen/commont_dp14" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/register_linear4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/textView_trigger_time"
                        android:textColor="@color/black_grey"
                        android:textSize="@dimen/commont_dp14" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/commont_dp20"
                        android:text="@string/app_name"
                        android:textColor="@color/black"
                        android:textSize="@dimen/commont_dp14" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/commont_dp10"
                android:layout_marginLeft="@dimen/commont_dp15"
                android:layout_marginTop="@dimen/commont_dp5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/textView_holding_state"
                    android:textColor="@color/black_grey"
                    android:textSize="@dimen/commont_dp14" />

                <TextView
                    android:id="@+id/register_study"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/commont_dp20"
                    android:text="@string/app_name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/commont_dp14" />

            </LinearLayout>

            <Button
                android:id="@+id/register_button"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/commont_dp30"
                android:layout_gravity="center|right"
                android:layout_marginBottom="@dimen/commont_dp10"
                android:layout_marginRight="@dimen/commont_dp10"
                android:background="@drawable/shape_c5_red"
                android:text="@string/textView_holding_ancel"
                android:textColor="@color/white"
                android:textSize="@dimen/commont_dp16" />

        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>
